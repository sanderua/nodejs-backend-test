{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": ["error", { "anonymous": "never", "named": "never", "asyncArrow": "always" }],
    "operator-linebreak": ["error", "before", { "overrides": { "=": "after" } }],
    "padding-line-between-statements": ["error", { "blankLine": "always", "prev": "*", "next": ["break", "continue", "throw", "return"] }],
    "no-console": ["error", { "allow": ["warn", "error"] }]
  }
}
